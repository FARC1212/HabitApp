<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_pantalla"
    tools:context=".fragments.Inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="80dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando fecha..."
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/texto_titulo"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_calendar_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSuenoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/color_tarjeta"
            app:strokeWidth="0dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="SueÃ±o"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_titulo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/ivCheckSueno"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/check"
                        app:tint="@color/purple_500"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSuenoHoras"
                    android:text="--h --m"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/texto_titulo"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Objetivo: 8 horas"
                    android:textSize="14sp"
                    android:textColor="@color/texto_secundario"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEjercicioContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/color_tarjeta"
            app:strokeWidth="0dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Ejercicio"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_titulo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/ivCheckEjercicio"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/check"
                        app:tint="@color/verde_agua"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvRutinaActual"
                        android:text="Sin rutina"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvEstadoEjercicio"
                        android:text="Estado pendiente"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_secundario"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRelaxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/color_tarjeta"
            app:strokeWidth="0dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Relax"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_titulo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/ivCheckRelax"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/check"
                        app:tint="@color/Relax"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvEstadoRelax"
                    android:text="Hoy no has registrado sesiones."
                    android:textSize="14sp"
                    android:textColor="@color/texto_secundario"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>