<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_pantalla"
    android:fillViewport="true"
    tools:context=".fragments.Cama">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="100dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monitor de Sueño"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/texto_titulo"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/historyButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:icon="@drawable/historial"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cornerRadius="12dp"/>
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="Nivel de ruido en tiempo real"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/sleepChart"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toca 'Iniciar' para comenzar"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/texto_titulo"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="Configuración de sesión"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/texto_titulo"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/alarmButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Establecer Alarma"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_launcher_foreground"
                    app:iconTint="@color/texto_titulo"
                    android:textColor="@color/texto_titulo"
                    app:strokeColor="#BDBDBD"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="16dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/startButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Iniciar Monitoreo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#673AB7"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stopButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Detener y Guardar"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textColor="#D32F2F"
                    app:strokeColor="#D32F2F"
                    app:strokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>